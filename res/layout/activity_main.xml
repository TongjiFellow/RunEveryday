<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebe2d1"
    android:gravity="right"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height"
        android:layout_alignParentTop="true"
        android:background="#00CC00" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="@dimen/title_bar_text_size"
            android:textStyle="bold"
            android:typeface="monospace" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Main_background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Main_tempreture"
            android:layout_width="wrap_content"
            android:text="23"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Main_shidu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="57%"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/Main_advice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="适宜跑步"
            android:gravity="center_vertical"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_background2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/main_background2"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Main_plan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:gravity="center_horizontal"
            android:text="@string/main_plan"
            android:textColor="#FFCC33"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Main_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_Button"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/main_button"
            android:layout_width="wrap_content"
            android:layout_height="70dip"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/achievement"
            android:src="@drawable/main_ioc" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Main_time"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/Main_time_text"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>